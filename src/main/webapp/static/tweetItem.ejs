<div id = "tweetItem_<%= pid %>" class = "span-15 add-padding-above-10">
    <div class = "span-2">
        <a href = "/user?uid=<%= uid %>">
            <img src = "/static/images/default-profile-picture.gif" height = 50 width = 60/>
        </a>
    </div>
    <div class = "span-13 last">
        <a href= '/user?uid=<%= uid %>'><%= name %></a> <br />
        <%= tweet %> <br />
        <font size = "1">Posted on: <%= timestamp %></font>
    </div>
</div>
